<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Progress Indicator -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressCircle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:indeterminate="false"
                    android:progress="50"
                    app:indicatorSize="100dp"
                    app:trackThickness="5dp"
                    app:trackColor="#dcdcdc"
                    app:indicatorColor="#4CAF50"
                    style="@style/Widget.Material3.CircularProgressIndicator"/>

                <TextView
                    android:id="@+id/tvStepText"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="2 of 4"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </FrameLayout>

            <!-- Titles -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStepTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Details"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvStepNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next: ID Verification"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Address Fields -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Residential Address"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:minLines="2"
            android:maxLines="4"
            android:inputType="textMultiLine"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City / Taluka"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="textCapWords"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="textCapWords"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Next"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
</ScrollView>
