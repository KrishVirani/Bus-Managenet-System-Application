<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conductor.conductor_view_Check_booking">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Back"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUS"
                android:textStyle="bold"
                android:textColor="#800080"
                android:textSize="18sp"
                android:paddingStart="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICKETING"
                android:textColor="#FFC107"
                android:textSize="18sp"
                android:paddingStart="2dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/bus"
                android:contentDescription="Bus Icon"
                app:tint="#FFC107" />
        </LinearLayout>

        <!-- Booking ID Input -->
        <EditText
            android:id="@+id/etBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Booking ID"
            android:inputType="number"
            android:background="@drawable/rounded_box"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Booking"
            android:backgroundTint="#673AB7"
            android:textColor="#FFF"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/tvNoBookingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No booking found."
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>

        <!-- Results -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/resultContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>