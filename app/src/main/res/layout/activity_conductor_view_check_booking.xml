<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conductor.conductor_view_Check_booking">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/blueheader"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            app:tint="@android:color/white"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/backagain"
                android:contentDescription="Back" />

            <View
                android:id="@+id/verticalLine"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_toEndOf="@id/btnback"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VERIFY BOOKINGS"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/busIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/bus"
                android:contentDescription="Bus Icon"
                app:tint="@android:color/white" />
        </RelativeLayout>
        <!-- Booking ID Input -->
        <EditText
            android:id="@+id/etBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Booking ID"
            android:inputType="number"
            android:background="@drawable/rounded_box"
            android:padding="12dp"
            android:layout_marginTop="16dp" />


        <TextView
            android:id="@+id/tvNoBookingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No booking found."
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>

        <!-- Results -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/resultContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>