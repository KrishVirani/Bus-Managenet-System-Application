<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressCircle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:indeterminate="false"
                    android:progress="50"
                    app:indicatorSize="100dp"
                    app:trackThickness="5dp"
                    app:trackColor="#dcdcdc"
                    app:indicatorColor="#4CAF50"
                    style="@style/Widget.Material3.CircularProgressIndicator"/>

                <TextView
                    android:id="@+id/tvStepText"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="3 of 4"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStepTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Verification"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/tvStepNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next: Pass Details"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <!-- Passport-size Photo -->
            <TextView
                android:text="Upload Passport Size Photo :"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Passport Section Centered at Top -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/img_passport"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/passport"
                    android:contentDescription="Passport Image"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btn_select_passport"
                    android:text="Choose Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- ID Number -->
            <EditText
                android:id="@+id/et_id_number"
                android:hint="Aadhaar or Govt ID Number"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/textPrimary" />

            <!-- Institution Name -->
            <EditText
                android:id="@+id/et_institution"
                android:hint="Institution / Organization Name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/textPrimary" />


            <!-- ID Proof Upload -->
            <TextView
                android:text="Upload ID Proof (PDF or Image)"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_id_proof_preview"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginTop="10dp">

                <!-- Hint Text -->
                <TextView
                    android:id="@+id/tv_hint_id_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click the button to choose your ID proof"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <!-- Choose File Button -->
                <Button
                    android:id="@+id/btn_select_id_proof"
                    android:text="Choose File"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:textSize="15sp"
                    android:background="@drawable/rounded_button"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>


            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
