<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passenger.view_passenger_Booking">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/blueheader"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            app:tint="@android:color/white"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/backButton1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/backagain"
                android:contentDescription="Back" />

            <View
                android:id="@+id/verticalLine"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_toEndOf="@id/backButton1"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT PROFILE"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/busIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/bus"
                android:contentDescription="Bus Icon"
                app:tint="@android:color/white" />
        </RelativeLayout>

        <!-- Scrollable Booking List -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:id="@+id/bookingListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        </ScrollView>
        <FrameLayout
            android:id="@+id/noDataPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
