<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blueheader"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:tint="@android:color/white"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/backButton1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/backagain"
            android:contentDescription="Back" />

        <View
            android:id="@+id/verticalLine"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/backButton1"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOK THE TICKET"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/busIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bus"
            android:contentDescription="Bus Icon"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/container1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/inputBackground"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/inputBackground"
                android:layout_marginHorizontal="8dp"
                android:elevation="2dp"
                android:clipToPadding="false"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBusName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus Name: "
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvShiftDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Shift Date: "
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="normal" />
            </LinearLayout>

    <!-- Bus and Schedule Information -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="4dp"
                android:background="@color/inputBackground"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/inputBackground"
                android:layout_marginHorizontal="8dp"
                android:elevation="2dp"
                android:clipToPadding="false"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvSourceStation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source: "
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvDestinationStation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Destination: "
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="normal" />
            </LinearLayout>


            <!-- Form for selecting stations, contact, seats, and payment -->
            <AutoCompleteTextView
                android:id="@+id/fromStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="From Station"
                android:minHeight="48dp" />

            <AutoCompleteTextView
                android:id="@+id/toStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="To Station"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Contact No"
                android:ems="10"
                android:inputType="phone"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etSeats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Number of Seats"
                android:inputType="number"
                android:minHeight="48dp" />

            <Spinner
                android:id="@+id/spinnerPaymentMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnpay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book and Pay"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button"
                android:textColor="#FFFFFF" />

            <TextView
            android:id="@+id/tvDisplayAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />


            <FrameLayout
                android:id="@+id/scheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
