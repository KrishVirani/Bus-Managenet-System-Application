<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/blueheader"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:tint="@android:color/white">

            <ImageView
                android:id="@+id/imgback3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/backagain"
                android:contentDescription="Back" />

            <View
                android:id="@+id/verticalLine"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_toEndOf="@id/imgback3"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUS DETAILS"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/busIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/bus"
                android:contentDescription="Bus Icon"
                app:tint="@android:color/white" />
        </RelativeLayout>

    <LinearLayout android:id="@+id/busListLayout"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
